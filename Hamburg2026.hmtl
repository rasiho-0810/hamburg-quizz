<script>
const richtigesPasswort = "HAMBURG2025";

const quiz = {
  anni: [
    { f:"Diese Stadt liegt an der Elbe und hat einen groÃŸen Hafen.", a:["Bremen","Hamburg","KÃ¶ln"] },
    { f:"Wie heiÃŸt das berÃ¼hmte Konzerthaus?", a:["Elbphilharmonie","Oper Nord","Musikdom"] }
  ],
  mejko: [
    { f:"Wo steht das Miniatur Wunderland?", a:["Hamburg","Berlin","Leipzig"] },
    { f:"Welche Tiere gibt es im Tierpark Hagenbeck?", a:["Nur Fische","Tiere aus aller Welt","Nur Bauernhoftiere"] }
  ],
  carla: [
    { f:"Welche Stadt hat sehr viele BrÃ¼cken?", a:["MÃ¼nchen","Hamburg","Frankfurt"] },
    { f:"Was kann man dort gut anschauen?", a:["Skifahren","Schiffe im Hafen","Vulkane"] }
  ],
  thea: [
    { f:"Welche Farbe hat der groÃŸe Fluss durch die Stadt?", a:["Blau","Elbe","GrÃ¼n"] },
    { f:"Was gibt es im Hafen zu sehen?", a:["Schiffe","Dinosaurier","Raumschiffe"] }
  ]
};

let person, index=0;

function startQuiz(p){
  person=p; index=0;
  document.getElementById("start").classList.add("hidden");
  document.getElementById("quiz").classList.remove("hidden");
  showQuestion();
}

function showQuestion(){
  const q=quiz[person][index];
  document.getElementById("frage").innerText=q.f;
  const a=document.getElementById("antworten");
  a.innerHTML="";
  q.a.forEach(t=>{
    const b=document.createElement("button");
    b.innerText=t;
    b.onclick=next;
    a.appendChild(b);
  });
}

function next(){
  index++;
  if(index<quiz[person].length){
    showQuestion();
  } else {
    document.getElementById("quiz").classList.add("hidden");
    document.getElementById("passwortInfo").classList.remove("hidden");
  }
}

function showPassword(){
  document.getElementById("passwortInfo").classList.add("hidden");
  document.getElementById("login").classList.remove("hidden");
}

function checkPassword(){
  const pw=document.getElementById("pw").value;
  if(pw===richtigesPasswort){
    document.getElementById("login").classList.add("hidden");
    document.getElementById("gutschein").classList.remove("hidden");
  } else {
    document.getElementById("error").innerText="âŒ Falsches Passwort";
  }
}
</script>

